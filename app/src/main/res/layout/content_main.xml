            android:id="@+id/buttonDownRow"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="-"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintRight_toLeftOf="@+id/numOfRows"
            app:layout_constraintTop_toBottomOf="@+id/buttonDownGlyph" />

        <Button
            android:id="@+id/buttonDownGlyph"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="-"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintRight_toLeftOf="@+id/numOfGlyphs"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_safezone"
            android:layout_marginRight="0dp" />

